<div class="row">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group col-xs-12">
    <%= f.label :email, class: "col-xs-4 text-right" %><br />
    <div class="col-xs-8">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>      
    </div>
  </div>  
  <div class="field form-group col-xs-12 text-right">
    <%= f.label :first_name, class: "col-xs-4" %><br>
    <div class=" col-xs-8">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>    
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :last_name, class: "col-xs-4 text-right" %><br>
    <div class=" col-xs-8">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>    
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :dob, class: "col-xs-4 text-right" %><br>
    <div class=" col-xs-8">
      <%= f.date_select :dob, class: "form-control" %>
    </div>    
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :sex, class: "col-xs-4 text-right" %><br>
    <div class=" col-xs-8">
      <%= f.text_field :sex, class: "form-control" %>
    </div>    
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :address, class: "col-xs-4 text-right" %><br>
    <div class=" col-xs-8">
      <%= f.text_field :address, class: "form-control" %>
    </div>    
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :password, class: "col-xs-4 text-right" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div class=" col-xs-8">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>      
    </div>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :password_confirmation, class: "col-xs-4 text-right" %><br />
    <div class=" col-xs-8">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="actions form-group col-xs-12">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>