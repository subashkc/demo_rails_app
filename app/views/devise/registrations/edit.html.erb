<div class="row">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group col-xs-12">
    <%= f.label :email, class: "col-xs-4 text-right" %>
    <div class="col-xs-8">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>      
    </div>
  </div>


  <div class="field form-group col-xs-12">
    <%= f.label :first_name, class: "col-xs-4 text-right" %>
    <div class="col-xs-8">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>    
  </div>
  <div class="field form-group col-xs-12 col-xs-12">
    <%= f.label :last_name, class: "col-xs-4 text-right" %>
    <div class=" col-xs-8">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>    
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :dob, class: "col-xs-4 text-right" %>
    <div class=" col-xs-8">
      <%= f.date_select :dob, class: "form-control" %>
    </div>    
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :sex, class: "col-xs-4 text-right" %>
    <div class=" col-xs-8">
      <%= f.text_field :sex, class: "form-control" %>
    </div>    
  </div>
  <div class="field form-group col-xs-12">
    <%= f.label :address, class: "col-xs-4 text-right" %>
    <div class=" col-xs-8">
      <%= f.text_field :address, class: "form-control" %>
    </div>    
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group col-xs-12">
    <%= f.label :password, class: " col-xs-4 text-right" %> <i>(leave blank if you don't want to change it)</i>
    <div class=" col-xs-8">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>      
    </div>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :password_confirmation, class: " col-xs-4 text-right" %>
    <div class="col-xs-8">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>      
    </div>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :current_password, class: " col-xs-4 text-right" %> <i>(we need your current password to confirm your changes)</i><br />
    <div class="col-xs-8">
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>      
    </div>
  </div>

  <div class="form-group actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>

<!-- <h3>Cancel my account</h3> -->

  <div class="form-group">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
  </div>
  
  <%= link_to "Back", :back, class: "btn btn-default" %>

</div>