<div class="row">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group col-xs-12">
    <%= f.label :email, class: "col-xs-4 text-right" %>
    <div class="col-xs-8">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :password, class: "col-xs-4 text-right" %>
    <div class="col-xs-8">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-group col-xs-12">
      <%= f.label :remember_me, class: "col-xs-4 text-right" %>
      <div class="col-xs-8">
        <%= f.check_box :remember_me, class: "" %>
      </div>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>